@page
@model Proiect_Bota_Rodica.Pages.Distribuitori.IndexModel

@{
    ViewData["Title"] = "Listă Distribuitori";
}

<h1>Listă Distribuitori</h1>

<p>
    <a asp-page="Create">Hai să vezi câți distribuitori de renume avem!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Distribuitor[0].NumeDistribuitor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distribuitor[0].Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distribuitor[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Distribuitor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeDistribuitor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <a asp-page="./Edit" class="btn btn btn-success" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" class="btn btn btn-success" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" class="btn btn btn-success" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
