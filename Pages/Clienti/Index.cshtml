@page
@model Proiect_Bota_Rodica.Pages.Clienti.IndexModel

@{
    ViewData["Title"] = "Listă Clienti";
}

<h1>Listă Clienti</h1>

<p>
    <a asp-page="Create">Hai să fi un membru al produselor cosmetice!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].NumeClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].NumarComanda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumarComanda)
            </td>
            <td>
                    <a asp-page="./Edit" class="btn btn btn-success" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" class="btn btn btn-success" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" class="btn btn btn-success" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
